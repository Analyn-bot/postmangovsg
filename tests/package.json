{
  "name": "tests",
  "version": "1.11.1",
  "description": "End-to-end tests for Postman",
  "main": "index.ts",
  "scripts": {
    "test:e2e": "ts-node -r dotenv/config end-to-end/index.ts",
    "dev:e2e": "npm test -- --live-mode",
    "lint-no-fix": "eslint --ext .js,.ts --cache .",
    "lint": "npm run lint-no-fix -- --fix",
    "mock": "concurrently -k -p \"[{name}]\" -n \"Email,Telegram,Twilio\" -c \"cyan.bold,yellow.bold,white.bold\" \"npm run mock:mail\" \"npm run mock:telegram\" \"npm run mock:twilio\"",
    "mock:mail": "ts-node -e \"require('./mocks').MockMailServer.start().catch(err => console.error(err))\"",
    "mock:telegram": "ts-node -e \"require('./mocks').MockTelegramServer.start(true).catch(err => console.error(err))\"",
    "mock:twilio": "ts-node -e \"require('./mocks').MockTwilioServer.start(true).catch(err => console.error(err))\"",
    "precommit": "lint-staged"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/convict": "^5.2.1",
    "@types/express": "^4.17.7",
    "@types/maildev": "0.0.1",
    "@types/node": "^14.0.27",
    "@types/validator": "^13.1.0",
    "@types/wait-on": "^4.0.0",
    "convict": "^6.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.19",
    "maildev": "^1.1.0",
    "nanoid": "^3.1.12",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.5",
    "sequelize-typescript": "^1.1.0",
    "testcafe": "^1.8.8",
    "testcafe-react-selectors": "^4.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "wait-on": "^5.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datagovsg/postmangovsg.git"
  },
  "bugs": {
    "url": "https://github.com/datagovsg/postmangovsg/issues"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  }
}
